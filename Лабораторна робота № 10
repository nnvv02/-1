!! Код першого студента:!!

# Перший студент - записує своє прізвище та питання у файл

# Шлях до файлу
file_path = "students_questions_and_answers.txt"

# Питання, яке ставить перший студент
question = "Що таке обробка виключних ситуацій у Python?"

# Прізвище першого студента
surname = "Владислав"

try:
    # Відкриваємо файл для запису
    with open(file_path, 'w', encoding='utf-8') as file:
        # Записуємо прізвище та питання
        file.write(f"Студент: {surname}\n")
        file.write(f"Питання: {question}\n")
        file.write("\n")
    print("Запис успішно здійснено.")
except Exception as e:
    print(f"Сталася помилка при роботі з файлом: {e}")

!! Код другого студента: !!

# Другий студент - записує своє прізвище та відповідь на питання

# Шлях до файлу
file_path = "students_questions_and_answers.txt"

# Відповідь другого студента
answer = """Обробка виключних ситуацій у Python дозволяє програмісту
ефективно реагувати на помилки, що виникають під час виконання коду.
Для цього використовуються конструкції try, except, finally."""

# Прізвище другого студента
surname = "Іванов"

try:
    # Відкриваємо файл для допису
    with open(file_path, 'a', encoding='utf-8') as file:
        # Записуємо прізвище студента та відповідь
        file.write(f"Студент: {surname}\n")
        file.write(f"Відповідь: {answer}\n")
        file.write("\n")
    print("Запис успішно здійснено.")
except Exception as e:
    print(f"Сталася помилка при роботі з файлом: {e}")

!! Код третього студента: !!

# Третій студент - ставить нове питання у файл

# Шлях до файлу
file_path = "students_questions_and_answers.txt"

# Нове питання
new_question = "Що таке декоратори в Python?"

# Прізвище третього студента
surname = "Петренко"

try:
    # Відкриваємо файл для допису
    with open(file_path, 'a', encoding='utf-8') as file:
        # Записуємо прізвище студента та нове питання
        file.write(f"Студент: {surname}\n")
        file.write(f"Питання: {new_question}\n")
        file.write("\n")
    print("Запис успішно здійснено.")
except Exception as e:
    print(f"Сталася помилка при роботі з файлом: {e}")

!! Код четвертого студента: !!

# Четвертий студент - дає відповідь на питання

# Шлях до файлу
file_path = "students_questions_and_answers.txt"

# Відповідь на питання про декоратори
answer = """Декоратори в Python — це спеціальні функції, які дозволяють модифікувати поведінку інших функцій чи методів.
Вони застосовуються для додавання додаткової логіки до функцій без зміни їхнього коду.
Декоратори часто використовуються для логування, перевірки прав доступу або кешування результатів."""

# Прізвище четвертого студента
surname = "Сидоренко"

try:
    # Відкриваємо файл для допису
    with open(file_path, 'a', encoding='utf-8') as file:
        # Записуємо прізвище студента та відповідь
        file.write(f"Студент: {surname}\n")
        file.write(f"Відповідь: {answer}\n")
        file.write("\n")
    print("Запис успішно здійснено.")
except Exception as e:
    print(f"Сталася помилка при роботі з файлом: {e}")
