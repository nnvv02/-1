# Вхідний текст для обробки
text = "Пізнання — це нескінченний процес, який веде до самовдосконалення. Людина, що прагне знань, відкриває нові горизонти кожного дня."

# 1. Використання функції .lower() для перетворення всіх символів рядка у нижній регістр
text_lower = text.lower()
print("Текст у нижньому регістрі:")
print(text_lower)

# 2. Використання функції .split() для розділення рядка на слова за пробілами
words = text.split()
print("\nСписок слів у тексті:")
print(words)

# 3. Використання функції .count() для підрахунку кількості входжень слова "знань"
word_to_count = "знань"
count = text_lower.count(word_to_count)
print(f"\nКількість входжень слова '{word_to_count}': {count}")

# 4. Використання функції .replace() для заміни слова "процес" на "шлях"
text_replaced = text.replace("процес", "шлях")
print("\nТекст після заміни слова 'процес' на 'шлях':")
print(text_replaced)

# 5. Використання функції .capitalize() для перетворення першого символу тексту у верхній регістр
text_capitalized = text_replaced.capitalize()
print("\nТекст із великої літери на початку:")
print(text_capitalized)

# 6. Використання функції .find() для знаходження індексу першого входження слова "нескінченний"
index = text.find("нескінченний")
print(f"\nІндекс першого входження слова 'нескінченний': {index}")

# 7. Використання функції len() для підрахунку загальної кількості символів у тексті
text_length = len(text)
print("\nЗагальна кількість символів у тексті:")
print(text_length)

# 8. Використання функції startswith() для перевірки, чи починається текст зі слова 'Пізнання'
starts_with = text.startswith("Пізнання")
print("\nЧи починається текст зі слова 'Пізнання'?")
print(starts_with)

# 9. Використання функції endswith() для перевірки, чи закінчується текст словом 'дня'
ends_with = text.endswith("дня.")
print("\nЧи закінчується текст словом 'дня'?")
print(ends_with)
